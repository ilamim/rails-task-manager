<h1>My tasks</h1>
<% @tasks.each do |task|%>
<ul>
<li><% if task.completed == true %>
<%= "✅" %>
<% else %>
<%= "❌" %>
<% end %>
<%= link_to task.title, task_path(task) %> - <%= link_to '✏️', edit_task_path(task) %> - <%= link_to '🗑️', task_path(task), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this task?' }  %></li>
</ul>
<% end %>
<h2><%= link_to 'Add new task', new_task_path %></h2>
